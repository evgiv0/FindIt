@model FindIt.Models.ModelViews.NoticeView

@{
    ViewBag.Title = "Добавить объявление";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Добавить объявление</h2>

@using (Html.BeginForm("AddNotice", "Notice", FormMethod.Post, new { enctype = "multipart/form-data", @class="form-horizontal" } ))
{
    @Html.ValidationSummary()
    <div class="form-group">
            @Html.LabelFor(m => m.IsLost, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.RadioButtonFor(m => m.IsLost, true) Потерял
            @Html.RadioButtonFor(m => m.IsLost, false) Нашел
        </div>
    </div>

    <div class="form-group">
            @Html.LabelFor(m => m.CategoryID, htmlAttributes: new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.CategoryID, Model.Categories)
        </div>
    </div>
    <div class="form-group">
            @Html.LabelFor(m => m.CityId, htmlAttributes: new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.CityId, Model.Cities)
        </div>
    </div>
    <div class="form-group">
            @Html.LabelFor(m => m.Theme, htmlAttributes: new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Theme)
        </div>
    </div>
    <div class="form-group">
            @Html.LabelFor(m => m.Content, htmlAttributes: new { @class = "control-label col-sm-2" })
       <div class="col-sm-10">
    @Html.TextAreaFor(m => m.Content, 5, 100, null)
</div>
    </div>
    <div class="form-group">
            @Html.LabelFor(m => m.AuthorName, htmlAttributes: new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.AuthorName)
        </div>
    </div>
    <div class="form-group">
            @Html.LabelFor(m => m.Phone, htmlAttributes: new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Phone, htmlAttributes: new { placeholder = "Введите телефон" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Email, htmlAttributes: new { placeholder = "Введите e-mail" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-sm-2">
            <b>
                Загрузите изображение:
            </b>
        </div>
        <input class="col-sm-10" type="file" name="Image" />
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2">
            <input class="btn btn-success" type="submit" value="Добавить" />
            @Html.ActionLink("Cancel", "List", null, null, new { @class = "btn btn-danger", @id="cancel" })
        </div>
    </div>

}
