<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="grid-container">
        <div class="page-header">
            @Html.ActionLink("Add notice", "AddNotice", "Notice")
        </div>
        <div class="searchBase">
            <div class="row">
                <div class="row">
                    <div class="col-lg-12" id="searchMenu">
                        @{ Html.RenderAction("SearchNotice", "Notice"); }
                    </div>
                </div>
                @*<div class="row">
                    <div class="col-lg-12 categories">
                        @{ Html.RenderAction("Menu", "Nav"); }
                    </div>
                </di*@v>
            </div>
        </div>
        <div class="row" id="main_content">
            <div class="col-lg-12" id="notices">
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/MyScripts/JqueryScript.js"></script>
</body>
</html>

